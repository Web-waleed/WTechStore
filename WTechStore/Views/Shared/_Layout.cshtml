@inject SignInManager<ApplicationUser> signInManager
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- SEO Meta Tags -->
    <title>W Tech-Store Platform - Everything a gamer needs</title>
    <meta name="description" content=" W Tech-Store is a specialized platform that offers the latest and best tech products for gamers. The platform aims to meet all the needs of gaming enthusiasts by providing a wide variety of electronic devices, including desktop and laptop computers, smartphones, and advanced gaming consoles. " />
    <meta name="keywords" content="Gaming products
