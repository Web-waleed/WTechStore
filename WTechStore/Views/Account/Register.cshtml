
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}


<!--inner block start here-->
<div class="signup-page-main">
	<div class="signup-main">
		<div class="signup-head">
			<img class="lg" src="~/./Logo W Tech-Store/fulllogo_transparent_nobuffer.png" alt="#" />
		</div>
		<div class="signup-block">
			<form asp-action="Register" asp-controller="Account" method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<input asp-for="FirstName" placeholder="FirstName" required="">
				<span asp-validation-for="FirstName"></span>
				<input asp-for="LastName" placeholder="LastName" required="">
				<span asp-validation-for="LastName"></span>
				<input asp-for="Email" type="text"  placeholder="Email" required="">
				<span asp-validation-for="Email"></span>
				<input asp-for="PhoneNumber" placeholder="Phone Number" required="">
				<span asp-validation-for="PhoneNumber"></span>
				<input asp-for="Password" class="lock" placeholder="Password">
				<span asp-validation-for="Password"></span>
				<input asp-for="ConfirmPassword" class="lock" placeholder="Confirm password">
				<span asp-validation-for="ConfirmPassword"></span>
				<div class="forgot-top-grids">
					<div class="forgot-grid">

						<input type="checkbox" id="brand1" value="">
						<label for="brand1"><span></span>I agree to the terms</label>

					</div>

					<div class="clearfix"> </div>
				</div>
				<input type="submit" name="Sign In" value="Sign up">
			</form>
			<div class="sign-down">
				<h4>Already have an account? <a asp-action="Login" asp-controller="Account"> Login here.</a></h4>
				<h5><a asp-action="Index" asp-controller="Home">Go Back to Home</a></h5>
			</div>
		</div>
	</div>
</div>
<!--inner block end here-->
<!--copy rights start here-->
<div class="copyrights">
	<p>© 2024 All Rights Reserved. W Tech-Store </p>
</div>
